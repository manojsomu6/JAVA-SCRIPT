<style>
    
        div{
            background-color: black;
            width: 100px;
            height: 100px;
        }

</style>

<div id="box"></div>
<button onclick="change()">change color</button>

<script>
    var box=document.getElementById("box")

    function change()
    {
        box.style.backgroundColor="red"
    
    }

</script>




=========================================================================================================

//transition
<style>
    
        div{
            background-color: black;
            width: 100px;
            height: 100px;
            transition: 4s;
        }
        .widthmax{
            width: 900px;
        }

</style>

<div id="box" class="widthmax"></div>
<button onclick="change()">change color</button>

<script>
    var box=document.getElementById("box")

    function change()
    {
        box.style.backgroundColor="red"

    
    }

</script>
